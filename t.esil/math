#!/bin/sh

# GPL 3+ - Copyright (C) 2015  pancake

for a in . .. ../.. ; do [ -e $a/tests.sh ] && . $a/tests.sh ; done

NAME='add 1 + 2'
FILE=-
CMDS='"ae 2,1,+"'
EXPECT='0x3
'
run_test

NAME='add 2 + 1'
FILE=-
CMDS='"ae 1,2,+"'
EXPECT='0x3
'
run_test

NAME='sub 2 - 3'
FILE=-
CMDS='"ae 3,2,-"'
EXPECT='0xffffffffffffffff
'
run_test

NAME='sub 3 - 2'
FILE=-
CMDS='"ae 2,3,-"'
EXPECT='0x1
'
run_test

NAME='sub 3 - 3'
FILE=-
CMDS='"ae 3,3,-"'
EXPECT='0x0
'
run_test

NAME='mul 3 * 2'
FILE=-
CMDS='"ae 2,3,*"'
EXPECT='0x6
'
run_test

NAME='mul 2 * 3'
FILE=-
CMDS='"ae 3,2,*"'
EXPECT='0x6
'
run_test

NAME='div 6 / 3'
FILE=-
CMDS='"ae 3,6,/"'
EXPECT='0x2
'
run_test

NAME='div 3 / 6'
FILE=-
CMDS='"ae 6,3,/"'
EXPECT='0x0
'
run_test

NAME='div by zero 0 / 3'
FILE=-
CMDS='ae 0,3,/
ae*'
EXPECT='trap: 3
trap-code: 0
'
run_test

NAME='div by zero 3 / 0'
FILE=-
CMDS='ae 3,0,/
ae*'
EXPECT='0x0
trap: 0
trap-code: 0
'
run_test


# FLOATING POINT

NAME='float div 1.0 / 1.0'
FILE=-
CMDS='"ae Fx3ff0000000000000,Fx3ff0000000000000,/"'
EXPECT='0x3ff0000000000000
'
run_test

NAME='float mul 1.0 * 1.0'
FILE=-
CMDS='"ae Fx3ff0000000000000,Fx3ff0000000000000,*"'
EXPECT='0x3ff0000000000000
'
run_test

NAME='float add 1.0 + 1.0'
FILE=-
CMDS='"ae Fx3ff0000000000000,Fx3ff0000000000000,+"'
EXPECT='0x4000000000000000
'
run_test

NAME='float sub 1.0 - 1.0'
FILE=-
CMDS='"ae Fx3ff0000000000000,Fx3ff0000000000000,-"'
EXPECT='0x0
'
run_test
